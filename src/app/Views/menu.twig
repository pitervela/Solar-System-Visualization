{% spaceless %}
    <ul id="menu" class="accordion planet-list" data-accordion>
        {% for planet in planets %}
            <li class="accordion-item" data-accordion-item>
                <a id="{{ planet.id }}" class="accordion-title planet-name" data-planet-id="{{ planet.id }}">{{ planet.name }}</a>
                <div class="accordion-content" data-tab-content>
                    <table>
                        <tbody>
                            <tr>
                                <td>Diameter</td>
                                <td>{{ planet.diameter }} km</td>
                            </tr>
                            <tr>
                                <td>Length Of Day</td>
                                <td>{{ planet.lengthOfDay }} hrs</td>
                            </tr>
                            <tr>
                                <td>Orbital Period</td>
                                <td>{{ planet.orbitalPeriod }} days</td>
                            </tr>
                            <tr>
                                <td>Surface Temp</td>
                                <td>{{ planet.surfaceTemps.mean }} K</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endspaceless %}
